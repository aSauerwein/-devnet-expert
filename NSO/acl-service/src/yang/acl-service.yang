module acl-service {

  namespace "http://example.com/acl-service";
  prefix acl-service;

  import ietf-inet-types {
    prefix inet;
  }
  import tailf-common {
    prefix tailf;
  }
  import tailf-ncs {
    prefix ncs;
  }

  description
    "Bla bla...";

  revision 2016-01-01 {
    description
      "Initial revision.";
  }

  list acccess-list {
    description "This is an RFS skeleton service";

    key name;
    leaf name {
      tailf:info "Unique service id";
      tailf:cli-allow-range;
      type string;
    }
    
    leaf-list device {
      type leafref {
        path "/ncs:devices/ncs:device/ncs:name";
      }
    }
    container default {
        leaf rule {
          type enumeration {
            enum yes;
            enum no;
          }
        }
    }
    
    list rule {
      key name;
      leaf name {
        type string;
      }
      leaf description {
        type string;
      }
      leaf action {
        mandatory true;
        type enumeration {
          enum permit;
          enum deny;
        }
      }
      leaf protocol {
        mandatory true;
        type enumeration {
          enum TCP;
          enum UDP;
        }
      }
      container source {
        leaf address {
          type inet:ip-address;
          mandatory true;
        }
        leaf port {
          type uint16;
        }
      }
      container destination {
        leaf address {
          type inet:ip-address;
          mandatory true;
        }
        leaf port {
          type uint16;
          mandatory true;
        }
      }
      leaf log {
        type empty;
      }
    }
  }
}
